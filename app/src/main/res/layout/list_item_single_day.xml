<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Singlparent"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
   android:layout_margin="10dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SinglRelativParent"
        >
        <TextView
            android:id="@+id/SinglMovTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:text="textView"
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <ImageView
            android:id="@+id/SingMovImg"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/SinglMovTitle"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_launcher_background" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_checkedm_circle"
            android:layout_toRightOf="@+id/SingMovImg"
            android:layout_marginLeft="7dp"
            android:visibility="gone"
            android:id="@+id/checkedCirle"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_no_checked_circl"
            android:layout_toRightOf="@+id/SingMovImg"
            android:layout_marginLeft="7dp"
            android:id="@+id/noCheckedCircle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Description"
            android:id="@+id/SingMovSortDesc"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/SingMovImg"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SingMovSortDesc"
            android:layout_centerHorizontal="true"
            android:text="Delete Plan"
            android:backgroundTint="#ff0000"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/DeletePlanBtn"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>